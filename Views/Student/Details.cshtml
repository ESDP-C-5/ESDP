@model CRM.Models.Student

@{
    ViewData["Title"] = "Details";
}

    <h1>Детали</h1>

<div>
    
    <hr />
    <dl class="row" >
        <dt class="col-sm-2">
            ФИО Ребенка
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
            @Html.DisplayFor(model => model.Name)
            @Html.DisplayFor(model => model.FatherName)
        </dd>
        <dt class="col-sm-2">
            Дата Рождения
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirthday)
        </dd>
        <dt class="col-sm-2">
            Дата пробного урока
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrialDate)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            ФИО Родителя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentLastName)
            @Html.DisplayFor(model => model.ParentName)
            @Html.DisplayFor(model => model.ParentFatherName)
        </dd>
        <dt class="col-sm-2">
            Комментарий
        </dt>
        <dd class="col-sm-10">
            @foreach (var str in Model.Comments)
            {
                <div>
                    @str.Text
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            Уровень
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level.Name)
        </dd>
        <dt class="col-sm-2">
            Группа
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.TimeTable)
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>


