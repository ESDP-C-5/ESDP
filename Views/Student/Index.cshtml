@model CRM.ViewModels.BranchesWithStudentsViewModel

@{
    ViewData["Title"] = "Index";
}

<ul class="nav nav-tabs">
    <li>
        <h4>
            @foreach (var item in Model.branches)
            {
                <a class="d-inline-block" onclick="SelectArchiveStudentsByBranchId(@item.Id)">@Html.DisplayFor(modelItem => item.Name)</a>
            }
            <a onclick="SelectLeadStudents()">Lead</a>
        </h4>
    </li>
</ul>

<div id="SelectedArchiveStudentsByBranchId">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].FatherName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].DateOfBirthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].TrialDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.students[0].Comment)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrialDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function SelectArchiveStudentsByBranchId(Id) {
            $('#SelectedArchiveStudentsByBranchId').load('@Url.Action("SelectArchiveStudentsByBranchId", "Student")?id=' + Id);
        }
    </script>

    <script>
        function SelectLeadStudents() {
            $('#SelectedArchiveStudentsByBranchId').load('@Url.Action("SelectLeadStudents", "Student")');
        }
    </script>
}
