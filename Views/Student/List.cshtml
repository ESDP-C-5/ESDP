@model CRM.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <table class="table table-bordered">
        <thead>
            
                <tr>
                    <th>
                        <a asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.LastNameSortState">ФИО Ребенка</a>
                    </th>
                    <th>
                        <a 
                            asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.DateOfBirthdaySortState">Дата Рождения</a>
                    </th>
                    <th>
                        <a 
                            asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.CreatedDateSortState">Дата Записи</a>
                    </th>
                    <th>
                        <a asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.ParentLastNameSortState">ФИО Родителя</a>
                    </th>
                    <th>
                        <a asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.PhoneNumberSortState">Номер телефона</a>
                    </th>
                    <th>
                        <a asp-route-value="@ViewBag.value"
                           asp-route-sortState="@Model.StatusSortState">Статус</a>
                    </th>
                    <th></th>
                </tr>
            

        </thead>
