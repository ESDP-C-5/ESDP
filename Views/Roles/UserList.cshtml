@model IEnumerable<CRM.Models.ApplicationUser>

    <h2>Список пользователей</h2>
    <table class="table">
        @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
            </td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
            <td><a class="btn btn-sm btn-primary" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a></td>
        </tr>
    }
    </table>
    <a asp-action="Register">Добавить пользователя</a>
