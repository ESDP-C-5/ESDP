@model CRM.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "Edit role";
}
<h4>Изменение роли</h4>

<form method="post">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Обновить</button>
            <a asp-action="ListRoles" class="btn btn-primary">Назад</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Пользователи с данной ролью</h3>
        </div>
        <div class="card-body">
            @{
                if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Нет пользователей с данной ролью</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-route-Id="@Model.Id" class="btn btn-primary">Управление пользователями</a>
        </div>
    </div>

</form>

